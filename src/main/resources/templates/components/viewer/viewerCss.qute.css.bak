/* Reset some default styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Fixed Header */
header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background-color: #007a33;
    color: #fff;
    text-align: center;
    padding: 2px 0;
    font-size: 0.75rem;
    z-index: 1000;
}

/* Fixed Footer */
footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: #007a33;
    color: #fff;
    text-align: center;
    padding: 2px 0;
    font-size: 0.75rem;
    z-index: 1000;
}

/* Fixed Sub-header (Below the Header) */
.sub-header {
    position: fixed;
    top: 22px; /* Directly below the header */
    left: 0;
    width: 100%;
    background-color: #555;
    color: #fff;
    display: flex;
    justify-content: space-between; /* Space out content */
    align-items: center; /* Align vertically */
    padding: 2px 20px;
    font-size: 0.75rem;
    z-index: 999;
}

/* Sub-header Image */
.sub-header img {
    height: 30px;
    width: 65px;
}

/* Dropdown Container */
.dropdown {
    position: relative;
    display: inline-block;
}

/* Dropdown Button (Chad) */
.dropdown button {
    background: none;
    border: none;
    color: #fff;
    font-size: 1.2rem;
    font-weight: bold;
    cursor: pointer;
}

.dropdown button:hover {
    text-decoration: underline;
}

/* Dropdown Content */
.dropdown-content {
    display: none;
    position: absolute;
    right: 0; /* Align dropdown to the right */
    background-color: #fff;
    box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
    min-width: 120px;
    border-radius: 5px;
    z-index: 1000;
}

.dropdown-content a {
    color: #333;
    text-decoration: none;
    padding: 10px 15px;
    display: block;
    font-size: 1rem;
}

.dropdown-content a:hover {
    background-color: #f4f4f4;
}

/* Show dropdown on hover */
.dropdown:hover .dropdown-content {
    display: block;
}

/* Main Content */
.content {
    margin-top: 36px; /* Space below the header */
    margin-bottom: 18px; /* Space above the footer */
    padding: 10px;
    background-color: #f4f4f4;
}